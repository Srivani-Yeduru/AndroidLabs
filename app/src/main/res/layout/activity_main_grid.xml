<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:columnCount="2"
    android:rowCount="5">

    <!-- Row 1: Profile Title -->
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your profile"
        android:textSize="24sp"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Row 2 Name Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your name:"
        android:layout_gravity="start"
        android:layout_marginTop="8dp" />

    <!-- Row 3: Name EditText -->
    <EditText
        android:id="@+id/profileNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:layout_columnWeight="1"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <!-- Row 4: Email Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email:"
        android:layout_gravity="start"
        android:layout_marginTop="16dp" />

    <!-- Row 5: Email EditText -->
    <EditText
        android:id="@+id/profileEmailEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:layout_columnWeight="1"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <!-- Row 6: Picture Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your picture:"
        android:layout_gravity="start"
        android:layout_marginTop="16dp" />

    <!-- Row 7: ImageButton -->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/picture_frame"
        android:contentDescription="Take a picture"
        android:layout_marginTop="8dp" />

    <!-- Row 8: ImageButton Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the button above to take a picture"
        android:layout_columnSpan="2"
        android:layout_marginTop="8dp" />

    <!-- Row 9: ImageView -->
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_columnSpan="2"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop" />

</GridLayout>
